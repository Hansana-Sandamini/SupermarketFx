<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="layoutPane" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo3.controller.MainLayoutController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" />
      <VBox fx:id="sideVbox" prefHeight="700.0" prefWidth="332.0" style="-fx-background-color: #c8d6e5;">
         <children>
            <Label fx:id="lblSuperMarket" alignment="CENTER" prefHeight="91.0" prefWidth="332.0" text="Super Market">
               <font>
                  <Font name="System Bold" size="39.0" />
               </font>
            </Label>
            <VBox fx:id="btnsVbox" prefHeight="383.0" prefWidth="332.0">
               <children>
                  <Button fx:id="btnCustomer" mnemonicParsing="false" onAction="#navigateToCustomerPage" prefHeight="55.0" prefWidth="333.0" text="Customer">
                     <font>
                        <Font size="26.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnItem" mnemonicParsing="false" onAction="#navigateToItemPage" prefHeight="55.0" prefWidth="333.0" text="Item">
                     <font>
                        <Font size="26.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnOrders" mnemonicParsing="false" onAction="#navigateToOrdersPage" prefHeight="55.0" prefWidth="333.0" text="Orders">
                     <font>
                        <Font size="26.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
      <AnchorPane fx:id="content" layoutX="332.0" prefHeight="700.0" prefWidth="668.0" style="-fx-background-color: #8395a7;" />
   </children>
</AnchorPane>
